<%= form_for(@picture) do |f| %>
  <%= f.error_messages! %>

  <%= f.label :写真 %>
  <%= f.file_field :img, class: 'form-control' %>
  <%= f.hidden_field :img_cache %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block'%>
<% end %>

<%= link_to "写真一覧画面にもどる", pictures_path %>
